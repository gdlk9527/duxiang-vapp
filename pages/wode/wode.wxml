<!--pages/Myinfo/Myinfo.wxml-->
<view class="Minfo">
    <image class="Minfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="Minfo-nickname">{{userInfo.nickName}}</text>
</view>
<view class="record">
  <view class="purchase">
      <image src="{{buyimg}}" mode="aspectFit" style="width: 75px;height: 75px;" ></image>
      <view>购买记录</view>
  </view>
  <view class="recharge">
      <image src="{{chargeimg}}" mode="aspectFit" style="width: 75px;height: 75px;" ></image>
      <view>充值记录</view>
  </view>
  <view class="ticket">
      <image src="{{ticketimg}}" mode="aspectFit" style="width: 75px;height: 75px;" ></image>
      <view>购买记录</view>
  </view>
</view>
<view class="detail">
  <li>
    <view  class="my">
      <image src="{{purseimg}}" mode="aspectFit" style="width:60px;height:60px;"></image>
      <text>我的账户</text>
    </view>
  </li>
  <li>
    <view  class="my">
      <image src="{{collectimg}}" mode="aspectFit" style="width:60px;height:60px;"></image>
      <text>我的收藏</text>
    </view>
  </li>
  <li>
    <view  class="my">
      <image src="{{messageimg}}" mode="aspectFit" style="width:60px;height:60px;"></image>
      <text>我的消息</text>
    </view>
  </li>
  <li>
    <view  class="my">
      <image src="{{tempoimg}}" mode="aspectFit" style="width:60px;height:60px;"></image>
      <text>阅读进度</text>
    </view>
  </li>
</view>
<view class="bottombar">
      <li><image bindtap="toshujia" src="{{shujiaimg}}" mode="aspectFit" style="width: 75px;height: 75px;margin-left: 25%;"></image></li>
      <li><image bindtap="toshuku" src="{{shukuimg}}" mode="aspectFit" style="width: 75px;height: 75px;margin-left: 25%;"></image></li>
      <li><image src="{{wodeimg}}" mode="aspectFit" style="width: 75px;height: 75px;margin-left: 25%;"></image></li>
</view>